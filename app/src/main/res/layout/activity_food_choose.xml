<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".FoodChoose">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="365dp"
        android:layout_height="77dp"
        android:background="@android:color/holo_orange_light"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hotelpic3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="363dp"
        android:layout_height="34dp"
        android:background="@drawable/yasoja_doctor_background"
        android:fontFamily="sans-serif-black"
        android:text="@string/room_service"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/imgbtn_bread"
        android:layout_width="157dp"
        android:layout_height="136dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/yasoja_image_button"
        android:fadingEdge="horizontal|vertical"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_pizza"
        app:srcCompat="@drawable/bread2" />

    <ImageButton
        android:id="@+id/imgbtn_pizza"
        android:layout_width="159dp"
        android:layout_height="134dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/yasoja_image_button"
        android:onClick="onClick"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/pizza" />

    <ImageButton
        android:id="@+id/imgbtn_rice"
        android:layout_width="150dp"
        android:layout_height="132dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/yasoja_image_button"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_bread"
        app:srcCompat="@drawable/rice2" />

    <Button
        android:id="@+id/btn_pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="62dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="onClick"
        android:text="Pizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="63dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="onClick"
        android:text="Bread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pizza" />

    <Button
        android:id="@+id/btn_rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="63dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="onClick"
        android:text="Rice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bread" />

</androidx.constraintlayout.widget.ConstraintLayout>